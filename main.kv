#: import SwapTransition kivy.uix.screenmanager.SwapTransition


ScreenManagement:
    transition: SwapTransition()
    MainScreen: 
    TextScreen:
	VoiceScreen:
	
<MainScreen>:
    name: 'main'
	
	GridLayout:
		cols:2
		Button:
			on_release: app.root.current = 'text'
			text: 'Press here if you want to run with text'
			font_size: 15
				
		Button:
			on_release: app.root.current = 'voice'
			text: 'Press here if you want to run with voice'
			font_size: 15
            
<TextScreen>:
    name: 'text'
	FormInput
	
		

<VoiceScreen>:
    name: 'voice'
	VoiceInput